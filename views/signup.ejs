<!DOCTYPE html>
<html lang="en">
  <%- include('./partial/head.ejs') %>
  <body style="background-color: rgba(32, 0, 50, 0.1)">
    <section id="mobile">
      <div class="signup">
        <div class="signup-container">
          <div class="cornerColor3"></div>
          <div class="signup-content">
            <div class="logo">
              <img src="./images/welcome photo.png" alt="" />
            </div>
            <h3>Create Account</h3>
            <form action="#" method="post">
              <input type="email" placeholder="Email" />
              <input type="password" placeholder="Password" />
              <input type="password" placeholder=" Confirm Password" />
              <button type="submit">Continue</button>
            </form>

            <div class="signup-text">
              <h1>or</h1>
            </div>
          </div>
        </div>
      </div>
      <div class="downLock"></div>
      <div class="downLock1-3"></div>

      <button class="signup-google-btn">
        <img src="./images/google svg.svg" alt="" />
        <h3>Continue with Google</h3>
      </button>

      <div class="footer-last"></div>

      <div class="signup-text3">
        <h1>Already have an account? <span>sign in</span></h1>
      </div>
    </section>

    <div class="last-footer">
      <hr />

      <div class="signup-footer-copyright">
        <i class="fa fa-copyright" aria-hidden="true"></i>
        <h5>PurgilSwap</h5>
        <p>2002</p>
      </div>
    </div>
  </body>
</html>
